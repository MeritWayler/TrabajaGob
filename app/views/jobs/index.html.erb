<div class= "container">
  <%= form_tag job_search_path , :method => 'get'  do %>
    <div class="row">
    <div class="form-inline " style="text-align: center">
      <div class ="form-group">
        <div class="input-group">
          <div class="input-group-addon search-transparent">
            <label for="location-search">  <span class="glyphicon glyphicon-map-marker">  </span></label>
          </div>
          <%= text_field_tag :searchLocation, params[:searchLocation], placeholder: "Estado,Ciudad", class:"form-control input-lg no-border-left", style: "width:300px", id:"location-search" %>

        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon search-transparent">
            <label for="type-search">  <span class="glyphicon glyphicon-search">  </span></label>
          </div>
          <%= text_field_tag :searchArea, params[:searchArea], placeholder: "area", class: "form-control input-lg no-border-left", style: "width:300px", id:"type-search" %>
        </div>
      </div>
      <strong>
        <%= submit_tag "Buscar" , name: nil, id: "boton-submit", class: "btn btn-primary btn-lg"  %>
      </strong>
    </div>
  </div>
<% end %>

